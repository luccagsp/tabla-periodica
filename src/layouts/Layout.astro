---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from 'astro:transitions';

---

<!doctype html>
<html lang="en" translate="no">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="google" content="notranslate">
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400;500;600;700&display=swap" rel="stylesheet">
		<!-- View transitions -->
		<ViewTransitions fallback='none'/>
	</head>
	<body>
			<main>
				<slot />
			</main>
	</body>
</html>
<style is:global>
	body{
		background: rgb(3,16,38);
background: radial-gradient(circle, rgba(3,16,38,1) 0%, rgba(1,4,9,1) 100%);
		font-family: 'Gabarito', sans-serif;
	}
	.subtitle{
		font-size: 20px;
		font-family: Arial, Helvetica, sans-serif;
		font-weight: bold;
	}
	@font-face {
		font-family: "GothamSSm";
		src: url('../assets/fonts/GothamSSm-Black.woff2');
		font-weight: 900;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: "GothamSSm";
		src: url('../assets/fonts/GothamSSm-Bold.woff2');
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: "GothamSSm";
		src: url('../assets/fonts/GothamSSm-Medium.woff2');
		font-weight: 500;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: "GothamSSm";
		src: url('../assets/fonts/GothamSSm-Light.woff2');
		font-weight: 300;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: "GothamSSm";
		src: url('../assets/fonts/GothamSSm-Book.woff2');
		font-weight: 400;
		font-style: normal;
		font-display: swap;
	}
</style>
<style>
	.head{
		border-bottom: solid #c7cbce;
		border-width: 0 0 1px;
	}
</style>